{
  "name": "react-animejs-wrapper",
  "version": "1.0.7",
  "description": "A wrapper to easily use Anime.js in React.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "author": "Daniel Dupont",
  "license": "ISC",
  "dependencies": {
    "animejs": "^3.2.1",
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@types/animejs": "^3.1.2",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.2",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.1.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielJDupont/react-animejs-wrapper"
  },
  "files": [
    "lib/**/*"
  ],
  "keywords": [
    "animejs",
    "anime.js",
    "anime",
    "react",
    "next",
    "nextjs",
    "next.js",
    "animation",
    "wrapper",
    "adapter"
  ]
}
